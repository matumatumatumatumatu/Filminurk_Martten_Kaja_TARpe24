@model Filminurk.Models.FavouriteLists.FavouriteListUserDetailsViewModel
@{
	int rowNumber = 1;
}
<div>
	<h1>USERTOGGLEPRIVACY</h1>
	@if (@Model.IsReported == true)
	{
		@:Sinu nimekiri rikub kogukonna reegleid<br />Oleme seadnud nimekirja privaatseks kuni admin selle üle vaatab.<br />
	}
	<table>
		<tr>@Model.ListName</tr>
		<tr><partial name="_ImageIndex" model="@Model.Image"></partial></tr>
	</table>
</div>
<div>
	<table class="table">
		@foreach (var movie in Model.ListOfMovies)
		{
			<tr>
				<table class="table" style="border:thick">
					<tr>
						<td colspan="2">@movie.Title</td>
					</tr>
					<tr>
						<td>(IMAGE HERE)</td>
						<td>
							<table>
								<tr>@movie.Description</tr>
								<tr>@movie.Director</tr>
								<tr>@movie.CurrentRating</tr>
								<tr>@movie.Genre</tr>
							</table>
						</td>
					</tr>
				</table>
			</tr>
		}
	</table>
	<div>

		<input asp-action="UserTogglePrivacy" asp-controller="FavouriteListsController" asp-route-id="@Model.FavouriteListID" type="submit" class="btn btn-warning" value="Muuda nimekiri privaatseks" />

		<a asp-action="Index" asp-controller="FavouriteListsController" class="btn btn-light">Tagasi</a>
	</div>
</div>
