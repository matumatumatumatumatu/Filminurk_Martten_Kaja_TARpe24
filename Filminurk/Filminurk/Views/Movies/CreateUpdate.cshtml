@using Filminurk.Models.Movies
@model Filminurk.Models.Movies.MoviesCreateUpdateViewModel
@if (Model.ID.HasValue)
{
	<h1>Muuda film</h1>
}
else
{
	<h1>Lisa Film</h1>
}
<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="ID" type="hidden" />
		<input asp-for="EntryCreatedAt" type="hidden" />
		<input asp-for="EntryModifiedAt" type="hidden" />

		<div class="form-group row">
			<label asp-for="Title" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-18">
				<input asp-for="Title" class="form-control"/>
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="CurrentRating" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-18">
				<input asp-for="CurrentRating" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Description" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-18">
				<input asp-for="Description" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="FirstPublished" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-18">
				<input asp-for="FirstPublished" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Director" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-18">
				<input asp-for="Director" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="RottenTomatoes" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-18">
				<input asp-for="RottenTomatoes" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Genre" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-18">
				<select asp-for="Genre" asp-items="Html.GetEnumSelectList<Genre>()">
					<option value="">-- Vali Žanr --</option>
				</select>
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="OscarsWon" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-18">
				<input asp-for="OscarsWon" class="form-control" />
			</div>
		</div>
		@if (Model.ID.HasValue)
		{
			<input asp-action="Create" asp-controller="Movies" type="submit" class="btn btn-primary" value="Create" />
		}
		else
		{
			<input asp-action="Update" asp-controller="Movies" type="submit" class="btn btn-primary" value="Update" />
		}
		<a asp-action="Index" asp-controller="Movies" class="btn btn-sucess" value="Back"></a>

		

	</form>
</div>